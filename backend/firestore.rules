rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Regla para Art√≠culos: Cualquiera puede leer, solo los autenticados pueden escribir.
    match /articles/{articleId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Regla para Documentos de Usuario: Un usuario solo puede leer y escribir su propio documento.
    // ESTA ES LA REGLA CLAVE QUE FALTABA.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Regla para Favoritos: Un usuario solo puede gestionar sus propios favoritos.
    match /users/{userId}/bookmarks/{bookmarkId} {
      allow read, create, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}